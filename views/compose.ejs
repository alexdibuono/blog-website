<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post" id="composeForm">

    <div class="form-group">
        <label for="titleInput">Title</label>
        <input name="titleInput" class="form-control" id="titleInput" placeholder="Blog Title..."></input>
    </div>

    <div class="form-group">
        <label for="postInput">Post</label>
        <textarea name="postInput" class="form-control" id="postInput" rows="3" placeholder="Blog Post..."></textarea>
    </div>

   <button type="submit" name="button" class="btn btn-primary">Publish</button>

</form>

